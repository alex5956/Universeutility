{% extends 'base.html.twig' %}

{% block title %}Ici les produits{% endblock %}

{% block body %}

    <div class="col-5">
    {{ form_start(form,{attr: {'id':'formulaire_produit'}}) }}
    {{ form_row(form.name) }}
    {{ form_row(form.price) }}
    {{ form_row(form.image,{attr: {'placeholder':'veuillez importer une image'}}) }}
    {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Soumettre</button>
    {{ form_end(form) }}
    </div>
    {{ request }}
{% endblock %}
